[Unit]
Description=Multi-EAR ctrl :: local web service
After=network.target
 
[Service]
Type=simple
User=tud
Group=tud
WorkingDirectory=/home/tud/
Environment="VIRTUAL_ENV=/home/tud/.py37"
Environment="PATH=$VIRTUAL_ENV/bin:$PATH"
ExecStart=/home/tud/.py37/bin/uwsgi --ini /home/tud/.py37/share/multi_ear/ctrl/uwsgi.ini
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=multi-ear-ctrl
Restart=always
 
[Install]
WantedBy=multi-user.target
