<h1 class="h2 pt-3 pb-2 mb-3 border-bottom">Dashboard</h1>

<div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="sensorDataUpdate" checked>
  <label class="form-check-label" for="sensorDataUpdate">Auto-update sensordata every 15s</label>
</div>

<div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="useUTC" checked>
  <label class="form-check-label" for="useUTC">Coordinated Universal Time (UTC)</label>
</div>

<figure class="my-3">
  <div id="chart-p"
       class="py-3"
       data-source="multi_ear"
       data-series="LPS33HW"
       data-scalar="1/4096"
       data-offset="0"
       data-title="Barometric Pressure"
       data-ylabel="Barometric Pressure [hPa]">
  </div>
  <div id="chart-dp"
       class="py-3"
       data-source="multi_ear"
       data-series="DLVR,SP210"
       data-scalar="0.01*250/6553,249.08/(0.9*32768)"
       data-offset="0,0"
       data-title="Differential Pressure"
       data-ylabel="Differential Pressure [Pa]">
  </div>
  <div id="chart-spl"
       class="py-3"
       data-source="multi_ear"
       data-series="ICS"
       data-scalar="100/4096"
       data-offset="0"
       data-title="Sound Pressure Level"
       data-ylabel="SPL [dbV]">
  </div>
  <div id="chart-acc-z"
       class="py-3"
       data-source="multi_ear"
       data-series="LIS3DH_Z"
       data-scalar="0.076*9.80665/1000"
       data-offset="0"
       data-title="Acceleration in Z-direction"
       data-ylabel="Z-direction acceleration [m s-2]">
  </div>
  <div id="chart-acc-x"
       class="py-3"
       data-source="multi_ear"
       data-series="LIS3DH_X"
       data-scalar="0.076*9.80665/1000"
       data-offset="0"
       data-title="Acceleration in X-direction"
       data-ylabel="X-direction acceleration [m s-2]">
  </div>
  <div id="chart-acc-y"
       class="py-3"
       data-source="multi_ear"
       data-series="LIS3DH_Y"
       data-scalar="0.076*9.80665/1000"
       data-offset="0"
       data-title="Acceleration in Y-direction"
       data-ylabel="Y-direction acceleration [m s-2]">
  </div>
  <div id="chart-t"
       class="py-3"
       data-source="multi_ear"
       data-series="SHT85_T"
       data-scalar="175/(2**16-1)"
       data-offset="-45"
       data-title="Temperature"
       data-ylabel="T [Â°C]">
  </div>
  <div id="chart-rh"
       class="py-3"
       data-source="multi_ear"
       data-series="SHT85_H"
       data-scalar="100/(2**16-1)"
       data-offset="0"
       data-title="Relative Humidity"
       data-ylabel="RH [%]">
  </div>
</figure>

<figure class="my-3">
  <div id="chart-system-load" class="py-3">
  </div>
  <div id="chart-memory-usage" class="py-3">
  </div>
</figure>
