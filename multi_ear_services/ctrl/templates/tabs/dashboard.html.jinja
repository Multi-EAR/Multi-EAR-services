<h1 class="h2 pt-3 pb-2 mb-3 border-bottom">Dashboard</h1>

<div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="sensorDataUpdate" checked>
  <label class="form-check-label" for="sensorDataUpdate">Auto-update sensordata every 15s</label>
</div>

<div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="useUTC" checked>
  <label class="form-check-label" for="useUTC">UTC - Coordinated Universal Time - time and date</label>
</div>

<div id="chart-p"
     class="py-3"
     data-source="multi_ear"
     data-series="multi_ear_LPS33HW"
     data-scalar="1/4096"
     data-title="Barometric Pressure"
     data-ylabel="Barometric Pressure [hPa]">
</div>
<div id="chart-dp"
     class="py-3"
     data-source="multi_ear"
     data-series="multi_ear_DLVR,multi_ear_SP210"
     data-scalar="0.01*250/6553,249.08/(0.9*32768)"
     data-title="Differential Pressure"
     data-ylabel="Differential Pressure [Pa]">
</div>
<div id="chart-spl"
     class="py-3"
     data-source="multi_ear"
     data-series="multi_ear_ICS"
     data-scalar="100/4096"
     data-title="Sound Pressure Level"
     data-ylabel="SPL [dbV]">
</div>
<div id="chart-acc-z"
     class="py-3"
     data-source="multi_ear"
     data-series="multi_ear_LIS3DH_Z"
     data-scalar="0.076*9.80665/1000"
     data-title="Acceleration in Z-direction"
     data-ylabel="Z-direction acceleration [m s-2]">
</div>
<div id="chart-acc-x"
     class="py-3"
     data-source="multi_ear"
     data-series="multi_ear_LIS3DH_X"
     data-scalar="0.076*9.80665/1000"
     data-title="Acceleration in X-direction"
     data-ylabel="X-direction acceleration [m s-2]">
</div>
<div id="chart-acc-y"
     class="py-3"
     data-source="multi_ear"
     data-series="multi_ear_LIS3DH_Y"
     data-scalar="0.076*9.80665/1000"
     data-title="Acceleration in Y-direction"
     data-ylabel="Y-direction acceleration [m s-2]">
</div>

<div id="chart-system-load"
     class="py-3"
     data-source="telegraf"
     data-series="system_load1,system_load5,system_load15"
     data-title="System Usage"
     data-ylabel="System Load">
</div>
<div id="chart-memory-usage"
     class="py-3"
     data-source="telegraf"
     data-series="mem_buffered,mem_cached,mem_free,mem_used"
     data-title="Memory Usage"
     data-ylabel="Memory Usage">
</div>
